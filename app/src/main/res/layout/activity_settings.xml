<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@android:dimen/app_icon_size"
        android:layout_marginEnd="24dp"
        android:text="Settings"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="48dp"
        app:layout_constraintBottom_toTopOf="@+id/DarkMode"
        app:layout_constraintEnd_toEndOf="@+id/DarkMode"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/DarkMode"
        android:layout_width="230dp"
        android:layout_height="48dp"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="15dp"
        android:text="Dark Mode"
        android:textSize="24dp"
        android:onClick="onSwitch"
        app:layout_constraintBottom_toTopOf="@+id/Sounds"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Switch
        android:id="@+id/Sounds"
        android:layout_width="230dp"
        android:layout_height="48dp"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="16dp"
        android:text="Sounds"
        android:textSize="24dp"
        android:onClick="onSwitch"
        app:layout_constraintLeft_toLeftOf="@+id/DarkMode"
        app:layout_constraintBottom_toTopOf="@+id/Notifications"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DarkMode" />

    <Switch
        android:id="@+id/Notifications"
        android:layout_width="230dp"
        android:layout_height="48dp"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="18dp"
        android:text="Notifications"
        android:textSize="24dp"
        android:onClick="onSwitch"
        app:layout_constraintLeft_toLeftOf="@+id/DarkMode"
        app:layout_constraintBottom_toTopOf="@+id/LocationPublic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Sounds" />

    <Switch
        android:id="@+id/LocationPublic"
        android:layout_width="230dp"
        android:layout_height="48dp"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="20dp"
        android:text="Location Public"
        android:textSize="24dp"
        android:onClick="onSwitch"
        app:layout_constraintBottom_toTopOf="@+id/SearchRadiusBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/DarkMode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Notifications" />

    <EditText
        android:id="@+id/SearchRadiusBox"
        android:layout_width="52dp"
        android:layout_height="48dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="270dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/SearchRadius"
        app:layout_constraintTop_toBottomOf="@+id/LocationPublic" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="45dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/homeAsUpIndicator"
        android:onClick="onClick"/>

    <TextView
        android:id="@+id/SearchRadius"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:layout_marginStart="65dp"
        android:text="Search Radius"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/SearchRadiusBox"
        app:layout_constraintEnd_toStartOf="@+id/SearchRadiusBox"
        app:layout_constraintLeft_toLeftOf="@+id/DarkMode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/SearchRadiusBox" />
</androidx.constraintlayout.widget.ConstraintLayout>